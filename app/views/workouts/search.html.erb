<h2> Add Exercises To Your Workout </h2>

<p class=search id=category> Search By Category: </p>
  <%= form_tag(workout_search_url(), method: :get, class: "search") do %>
    <%= select_tag "category", options_for_select([ "Abs", "Arms", "Back", "Calves", "Chest", "Legs", "Shoulders" ])%>
    <%= submit_tag ("Search") %>
  <% end %>

<% @response["results"].each do |post| %>
    <div class="jumbotron">
      <p id=name><%= post["name"]%></p>
      <p id=description><%= ActionView::Base.full_sanitizer.sanitize(post["description"])%></p>
      <%= link_to "Add Exercise", new_exercise_path(workout_id: @workout_id, title: post["name"], categroy: post["category"], description: post["description"], equipment: post["equipment"] ), class: "btn" %>
    </div>
<% end %>