<div class="jumbotron bg-info text-white">
	<p>
	 	<b>
	    	<%= t('.name') %>
	  	</b>
	  	<%= @workout.name %>
	</p>
	<p>
	  <b>
	    <%= t('.fitness_goal') %>
	  </b>
	  <%= @workout.fitness_goal %>
	</p>
	
</div>
<br>

<button type="button" id="btn" class="btn btn-success btn-lg"><%= link_to 'Edit workout', edit_workout_path(@workout)  %></button>

<%= button_to 'Delete Workout', @workout, method: :delete, data: { confirm: t('crud.delete_confirm') } %>
<hr/>
<% #Renders exercises table only if there are exercises to display %>

<button type="button" id="btn" class="btn btn-info btn-lg"><%= link_to 'Add Exercise', workout_search_path(workout_id: @workout.id)  %></button>
<%= render :partial => "exercises/table" unless @workout.exercises.empty? %>


