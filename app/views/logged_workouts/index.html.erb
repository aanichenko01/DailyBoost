<h2>
  <%= t('.title') %>
</h2>

<br>

<button type="button"  class="btn btn-primary btn-lg"><%= link_to t('logged_workouts.new'), new_logged_workout_path  %></button>

<br><br><br>

<table class="table table-striped table-hover table-responsive-md">
  <thead >
    <tr>
      <th class="heading"><%=link_to "Name", :sort => "name"%></th>
      <th class="heading"><%=link_to "Date", :sort => "start_time"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @logged_workouts.reverse_each do |logged_workout| %>
      <tr class="hoverable">
        <td>
          <%= logged_workout.name %>
        </td>
        <td>
          <%= logged_workout.start_time %>
        </td>
        <td>
          <%= link_to t('crud.details'), logged_workout %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>



